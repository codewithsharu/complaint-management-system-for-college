<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Complaints</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f0f0f0;
        }
        tr:nth-child(even) {
            background-color: #e0e0e0;
        }
        tr:hover {
            background-color: #d0d0d0;
        }
        button {
            background-color: #27ae60;
            color: #fff;
            border: none;
            padding: 8px 20px;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #219653;
        }
        span.solved {
            color: #27ae60;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>ECE - Complaints</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Roll Number</th>
                <th>Message</th>
                <th>Created At</th>
                <th>Status</th>
                <th>Branch</th>
                <th>Ref ID</th> <!-- Added column for ref_id -->
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% complaints.forEach(function(complaint) { %>
                <tr>
                    <td><%= complaint.id %></td>
                    <td><%= complaint.roll_number %></td>
                    <td><%= complaint.message %></td>
                    <td><%= complaint.created_at %></td>
                    <td><%= complaint.status %></td>
                    <td><%= complaint.branch %></td>
                    <td><%= complaint.ref_id %></td> <!-- Display ref_id -->
                    <td>
                        <% if (complaint.status !== 'solved') { %>
                            <form action="/mark_as_solved/<%= complaint.branch %>/<%= complaint.ref_id %>" method="POST">
                                <button type="submit">Mark as Solved</button>
                            </form>
                            
                        <% } else { %>
                            <span class="solved">Solved</span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
