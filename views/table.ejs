

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Complaints</title>
    <style>
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color:#030637; 
    color: #fff;
}

.container {
    max-width: 100%;
    margin: 20px ;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Box shadow */
    padding: 20px;
}

h1 {
    text-align: center;
    margin-top: 0;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th, td {
    padding: 8px;
    text-align: left;
}

th {
    background-color: #333; 
}

tr:nth-child(even) {
    background-color: #2c2c2c; 
}

tr:hover {
    background-color: #444; 
}

button {
    background-color: #4caf50;
    color: #fff;
    border: none;
    padding: 6px 16px;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #45a049; 

span.solved {
    color: #4caf50; 
    font-weight: bold;
}

@media only screen and (max-width: 600px) {
    table {
        font-size: 14px;
    }

    th, td {
        padding: 6px;
    }

    button {
        padding: 4px 12px;
        font-size: 12px;
    }
}

    </style>
</head>
<body>
    <div class="container">
        <h1 style="font-size: medium;"><%= branch %> - complaints</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Complaint Type</th>
                    <th>Roll Number</th>
                    <th>Message</th>
                    <th>Created At</th>
                    <th>Branch</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% complaints.forEach(function(complaint) { %>
                    <tr>
                        <td><%= complaint.type %></td>
                        <td><%= complaint.roll_number %></td>
                        <td><%= complaint.message %></td>
                        <td><%= complaint.created_at %></td>
                        <td><%= complaint.branch %></td>
                        <td>
                            <% if (complaint.status !== 'solved') { %>
                                <form action="/mark_as_solved/<%= complaint.branch %>/<%= complaint.ref_id %>" method="POST">
                                    <button type="submit">Mark as Solved</button>
                                </form>
                            <% } else { %>
                                <span class="solved">Solved</span>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
