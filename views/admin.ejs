


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Complaints</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #121212; /* Dark background color */
            color: #fff; /* Text color */
        }

        .container {
            max-width:100%;
            margin: 20px ;
            background-color: rgba(255, 255, 255, 0.1); /* Transparent white background */
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Box shadow */
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-top: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #333; /* Dark gray background for header */
        }

        tr:nth-child(even) {
            background-color: #2c2c2c; /* Darker gray background for even rows */
        }

        tr:hover {
            background-color: #444; /* Dark background on hover */
        }

        button {
            background-color: #4caf50; /* Green button color */
            color: #fff;
            border: none;
            padding: 6px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049; /* Darker green on hover */
        }

        /* Responsive Styles */
        @media only screen and (max-width: 600px) {
            table {
                font-size: 14px;
            }

            th, td {
                padding: 6px;
            }

            button {
                padding: 4px 12px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style=" font-size: medium; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Admin Panel - Complaints</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Reference ID</th>
                    <th>Roll Number</th>
                    <th>Message</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>Branch</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% complaints.forEach(function(complaint) { %>
                    <tr>
                        <td><%= complaint.id %></td>
                        <td><%= complaint.ref_id %></td> 
                        <td><%= complaint.roll_number %></td>
                        <td><%= complaint.message %></td>
                        <td><%= complaint.created_at %></td>
                        <td><%= complaint.status %></td>
                        <td><%= complaint.branch %></td>
                        <td>
                            <form action="http://localhost:3000/a/<%= complaint.branch %>/<%= complaint.roll_number %>/<%= complaint.ref_id %>" method="get">
                                <button type="submit">Approve</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>

