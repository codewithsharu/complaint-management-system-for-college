<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Complaints Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        .dashboard-section {
            margin-top: 20px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }
        .section-header {
            font-size: 20px;
            margin-bottom: 10px;
        }
        .complaint {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 4px;
        }
        .pending {
            background-color: #f7be16;
            color: #fff;
        }
        .processing {
            background-color: #3498db;
            color: #fff;
        }
        .solved {
            background-color: #27ae60;
            color: #fff;
        }
        /* Responsive styles */
        @media screen and (max-width: 768px) {
            .dashboard-section {
                padding: 10px;
            }
            .section-header {
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <h1>Complaints Dashboard</h1>

    <div class="dashboard-section">
        <div class="section-header">Pending Complaints</div>
        <% complaints.filter(complaint => complaint.status === 'pending').forEach(function(complaint) { %>
            <div class="complaint pending">
                <strong>Reference ID:</strong> <%= complaint.ref_id %><br>
                <strong>Message:</strong> <%= complaint.message %><br>
                <strong>Created At:</strong> <%= complaint.created_at %><br>
            </div>
        <% }); %>
    </div>

    <div class="dashboard-section">
        <div class="section-header">Processing Complaints</div>
        <% complaints.filter(complaint => complaint.status === 'processing').forEach(function(complaint) { %>
            <div class="complaint processing">
                <strong>Reference ID:</strong> <%= complaint.ref_id %><br>
                <strong>Message:</strong> <%= complaint.message %><br>
                <strong>Created At:</strong> <%= complaint.created_at %><br>
            </div>
        <% }); %>
    </div>

    <div class="dashboard-section">
        <div class="section-header">Solved Complaints</div>
        <% complaints.filter(complaint => complaint.status === 'solved').forEach(function(complaint) { %>
            <div class="complaint solved">
                <strong>Reference ID:</strong> <%= complaint.ref_id %><br>
                <strong>Message:</strong> <%= complaint.message %><br>
                <strong>Created At:</strong> <%= complaint.created_at %><br>
            </div>
        <% }); %>
    </div>

</body>
</html>
