<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Complaints</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f0f0f0;
        }
        tr:nth-child(even) {
            background-color: #e0e0e0;
        }
        tr:hover {
            background-color: #d0d0d0;
        }
        .pending {
            background-color: #f7be16;
        }
        .processing {
            background-color: #3498db;
        }
        .solved {
            background-color: #27ae60;
        }
        button {
            color: #fff;
            border: none;
            padding: 8px 20px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%; /* Full width */
        }
        
        /* Responsive styles */
        @media screen and (max-width: 768px) {
            th, td {
                font-size: 14px; /* Decrease font size */
                padding: 8px; /* Decrease padding */
            }
        }
    </style>
</head>
<body>
    <h1>All Complaints And Status</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Reference ID</th>
                <th>Message</th>
                <th>Created At</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% complaints.forEach(function(complaint) { %>
                <tr>
                    <td><%= complaint.ref_id %></td> 
                    <td><%= complaint.message %></td>
                    <td><%= complaint.created_at %></td>
                    <td>
                        <button class="<%= complaint.status %>"><%= complaint.status %></button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
